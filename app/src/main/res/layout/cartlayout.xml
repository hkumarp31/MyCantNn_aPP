<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ItemImageCartID"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ItemNameCartID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="15dp"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/ItemCountCartID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
             />
        <TextView
            android:id="@+id/ItemPriceCartID"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TotalPriceisID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="This Item Cost:"
                android:textAlignment="center"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ItemTotalPriceCartID"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingHorizontal="15dp"
                android:textAlignment="viewEnd"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>