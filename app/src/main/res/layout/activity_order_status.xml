<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="7dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/customer_my_order_Image"
        android:paddingLeft="5dp"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="120dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginLeft="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
            android:id="@+id/customer_my_order_Title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="18dp"
            android:textStyle="bold" />

            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

                    <TextView
                android:id="@+id/customer_my_orderDate"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                        android:paddingTop="5dp"/>



        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/customer_my_order_OrderID_TV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:text="Order ID : "
            android:gravity="center_vertical"
            android:textAlignment="gravity"/>
        <TextView
            android:id="@+id/customer_my_order_OrderID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="gravity"/>
            <TextView
                android:id="@+id/customer_my_order_Quantity_TV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:text="QTY :"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
            <TextView
                android:id="@+id/customer_my_order_Quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_my_order_SinglePrice"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />
            <TextView
                android:id="@+id/customer_my_order_USERID"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />
            <TextView
                android:id="@+id/customer_my_order_Price_TV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="Price:"
               android:gravity="center_vertical"
                android:textAlignment="gravity"/>

            <TextView
                android:id="@+id/customer_my_order_TotalCost"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textSize="18dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/customer_my_order_Status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:gravity="center_vertical"
                android:textAlignment="center"
                android:textColor="@color/Green"
                android:textSize="18dp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
