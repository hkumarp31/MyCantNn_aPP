<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="10dp">
    <ImageView
        android:id="@+id/customer_my_order_Image"
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="120dp" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/customer_my_order_Title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="gravity"
            android:textSize="18dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/customer_my_order_OrderID_TV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:text="Order ID : "
            android:gravity="center_vertical"
            android:textAlignment="gravity"/>
        <TextView
            android:id="@+id/customer_my_order_OrderID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="gravity"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/customer_my_order_Quantity_TV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:text="QTY :"
                android:gravity="center_vertical"
                android:textAlignment="gravity"/>
        <TextView
            android:id="@+id/customer_my_order_Quantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="gravity"/>
            <TextView
                android:id="@+id/customer_my_order_SinglePrice"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0" />
        <TextView
            android:id="@+id/customer_my_order_TotalCost"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
