<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginVertical="15dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/CustomerOrderProductimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/getProductName_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"

            android:textAlignment="viewStart"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/getProductQuantity_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textAlignment="center"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/getProductSinglePrice_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textAlignment="center"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/getProductTotalPrice_TV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"

            android:textAlignment="viewEnd"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:text="OrderId Is : "
            android:textAlignment="viewEnd"
            android:textSize="14sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/getProductOrderId_TV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="viewEnd"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
    </LinearLayout>


</LinearLayout>